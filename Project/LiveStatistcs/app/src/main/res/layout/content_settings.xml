<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Distância X"
        android:layout_alignParentStart="true"
        android:id="@+id/x_tv"
        android:layout_marginTop="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Distância Y"
        android:layout_below="@+id/x_tv"
        android:id="@+id/y_tv"
        android:layout_marginTop="20dp"/>

    <EditText
        android:layout_toEndOf="@id/x_tv"
        android:layout_width="150dp"
        android:layout_height="46dp"
        android:id="@+id/x_et"
        android:layout_marginLeft="10dp"
        android:textSize="18sp"
        android:inputType="numberDecimal"/>

    <EditText
        android:layout_width="150dp"
        android:layout_height="46dp"
        android:id="@+id/y_et"
        android:layout_toEndOf="@id/y_tv"
        android:layout_below="@id/x_et"
        android:layout_marginTop="0dp"
        android:textSize="18sp"
        android:inputType="numberDecimal"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Tamanho X"
        android:layout_below="@+id/y_tv"
        android:id="@+id/sizex_tv"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Tamanho Y"
        android:layout_below="@+id/sizex_tv"
        android:id="@+id/sizey_tv"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:layout_toEndOf="@id/sizex_tv"
        android:layout_below="@+id/y_et"
        android:layout_width="150dp"
        android:layout_height="46dp"
        android:id="@+id/sizex_et"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:inputType="numberDecimal"/>

    <EditText
        android:layout_width="150dp"
        android:layout_height="46dp"
        android:id="@+id/sizey_et"
        android:textSize="18sp"
        android:layout_toEndOf="@id/sizey_tv"
        android:layout_below="@id/sizex_et"
        android:layout_marginTop="0dp"
        android:inputType="numberDecimal"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"/>


</RelativeLayout>