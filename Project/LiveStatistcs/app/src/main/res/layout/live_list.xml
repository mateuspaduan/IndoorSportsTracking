<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/beacon_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:padding="4dp">

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/color"
        android:layout_alignParentStart="true"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/name_number"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="Player_Name (number)"
        android:maxLines="1"
        android:textSize="14sp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/color"/>

    <TextView
        android:id="@+id/totalrun"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="Total: 999 m"
        android:layout_below="@id/name_number"
        android:layout_toEndOf="@+id/color"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/avgrun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Media: 85 m"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:layout_toEndOf="@+id/totalrun"
        android:layout_below="@id/name_number"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"/>

</RelativeLayout>